<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_computer_update_price_wizard_form" model="ir.ui.view">
            <field name="name">computer.update.price.wizard.form</field>
            <field name="model">computer.update.price.wizard</field>
            <field name="arch" type="xml">
                <form string="Cập nhật giá">
                    <group>
                        <field name="percent"/>
                    </group>
                    <footer>
                        <button name="action_update_price" string="Cập nhật ngay" type="object" class="btn-primary"/>
                        <button string="Hủy bỏ" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_computer_update_price" model="ir.actions.act_window">
            <field name="name">Cập nhật giá hàng loạt</field>
            <field name="res_model">computer.update.price.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_computer_update_price"
                  name="Cập nhật giá"
                  parent="sale.product_menu_catalog"
                  action="action_computer_update_price"
                  sequence="100"
                  groups="computer_shop.group_computer_manager"/>
    </data>
</odoo>