<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="products_item_inherit_computer" inherit_id="website_sale.products_item">
            <xpath expr="//div[hasclass('product_price')]" position="before">
                
                <div class="text-muted mb-1" style="font-size: 12px;">
                    <t t-if="product.pro_cpu">
                        <i class="fa fa-microchip"/> <span t-field="product.pro_cpu"/>
                    </t>
                    <span t-if="product.pro_cpu and product.pro_ram"> | </span>
                    <t t-if="product.pro_ram">
                        <i class="fa fa-memory"/> <span t-field="product.pro_ram"/>
                    </t>
                </div>

            </xpath>
        </template>
    </data>
</odoo>